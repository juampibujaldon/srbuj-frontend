{
  "name": "srbuj-frontend",
  "private": true,
  "workspaces": [
    "home/home",
    "srbuj-login"
  ],
  "dependencies": {
    "framer-motion": "^12.23.12",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "start": "concurrently -c auto -n HOME,LOGIN \"npm:home:start\" \"npm:login:start\"",
    "home:start": "npm --workspace home/home start",
    "login:start": "cross-env PORT=3001 npm --workspace srbuj-login start",
    "build": "npm run home:build && npm run login:build",
    "home:build": "npm --workspace home/home run build",
    "login:build": "npm --workspace srbuj-login run build"
  }
}
